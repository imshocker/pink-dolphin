<main>
    <div class="create-form">
        <form action="/create-blog-post" method="POST">
            <input type="text" name="title" placeholder="Title" required>
            <textarea name="contents" placeholder="Description" required class="large-textarea"></textarea>
            <button type="submit">Create Blog Post</button>
        </form>
    </div>

    {{#if blogPosts.length}}
        <div style="text-align: center; font-size: 25px; padding: 10px;">Your Blogs:</div>
        {{#each blogPosts as |blogPost|}}
            {{> blogPost-details}} <!-- Assuming you have a partial for displaying individual blog posts -->
        {{/each}}
    {{else}}
        <p>No blog posts found.</p>
    {{/if}}
</main>
