<main>
    <div class="container-blog">
        <section class="blog-title">{{blogPosts.title}}</section>
        <section class="blog-user">-{{blogPosts.user_name}} | {{blogPosts.date}}</section>
        <div class="blog-contents">
            <h3>{{blogPosts.contents}}</h3>
        </div>
    </div>
    <div class="comment-section">
        <form action="/create-comment" method="POST">
            <textarea name="contents" placeholder="Reply to this post..." required class="large-textarea"></textarea>
            <button type="submit">Submit</button>
        </form>
        <h4 style="font-size: 25px;">Comments:</h4>
    </div>
    <div>

        <div>
            {{#each blogPosts.comments as |Comment|}}
            {{> comment-details}}
            {{/each}}
        </div>
    </div>
</main>